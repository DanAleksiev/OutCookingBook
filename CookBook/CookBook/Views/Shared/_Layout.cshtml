<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CookBook.styles.css" asp-append-version="true" />

    <link rel="icon" href="/img/BrowserIcon.png" />
</head>
<body id="recepie-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" id="recepie-nav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CookBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                    {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Food
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Food" asp-action="Add">Add food recepie</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Food" asp-action="All">All food recepie</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Food" asp-action="Private">Your food recepie</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Drink
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Drink" asp-action="Add">Add drink recepie</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Drink" asp-action="All">All drink recepie</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Drink" asp-action="Private">Your drink recepie</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ranking
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Rating" asp-action="TopTenRatedDrink">Top 10 Drinks</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Rating" asp-action="TopTenRatedFood">Top 10 Food</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Favourites
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Favourite" asp-action="AllFavouriteFood">Favourite Food</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Favourite" asp-action="AllFavouriteDrink">Favourite Drink</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Health
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-controller="Health" asp-action="AdvicePosters">Advice posters</a></li>
                                    <li><hr class="dropdown-divider"></li>

                                </ul>
                            </div>
@*                             @if (User.IsInRole("Admin"))
                                {
                                <div class="btn-group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Admin" asp-action="RoleControll">Role Controll</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Admin" asp-action="DrinkRecepiesFromJSON">get drink from json</a></li>
                                    </ul>
                                </div>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        DeleteMeWhenDoneSeeding
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Seed" asp-action="FoodRecepiesToJSON">get food to json</a></li>
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Seed" asp-action="FoodRecepiesFromJSON">get food from json</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Seed" asp-action="DrinkRecepiesToJSON">get drink to json</a></li>
                                        <li><a class="nav-link text-dark dropdown-item" asp-controller="Seed" asp-action="DrinkRecepiesFromJSON">get drink from json</a></li>
                                    </ul>
                                </div>
                                } *@
                        </div>

                        <partial name="_LoginPartial" />
                    </div>
                    }
                else
                    {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                    }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer fixed-bottom">
        <div class="container">
            &copy; @DateTime.Now.Year - CookBook
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
