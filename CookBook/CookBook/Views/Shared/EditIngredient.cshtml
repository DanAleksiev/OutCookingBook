@model EditIngredientsForm

@{
   ViewBag.Title = "Edit ingredient";
}


<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 text-center">
    <div>
        <h3>@ViewBag.Title</h3>
    </div>
    <form asp-action="EditIngredient" method="post">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Name of the dish:" />
        <span asp-validation-for="@Model.Name" class=" small text-danger"></span>
        <hr />
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Give us a short description of the meal:" />
        <span asp-validation-for="@Model.Description" class=" small text-danger"></span>
        <hr />

        <div class="card mt-4">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" placeholder="Whats the country of origin:" />
            <span asp-validation-for="Amount" class=" small text-danger"></span>
            <hr />
            <select asp-for="@Model.MeasurmentId" class="form-control amountTypeIngredient" aria-required="true">
                @foreach (var type in Model.MeasurmentTypes)
                    {
                    <option value="@type.Id">@type.Name</option>
                    }
            </select>

        </div>
        <div>
            <input id="submitBtn" class=" btn btn-primary mt-3" type="submit" value="Edit" />
        </div>

    </form>
</div>